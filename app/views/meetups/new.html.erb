<h1>Add a new Meetup</h1>

<% if @meetup.errors.size > 0 %>
  <p>You done f'd up your meetup</p>
  <ul>
    <% @meetup.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @meetup do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <% if @meetup.errors[:name] %>
      <p><small><%= @meetup.errors[:name].join(", ") %>
    <% end %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <%= f.submit 'Create Meetup' %>
<% end %>